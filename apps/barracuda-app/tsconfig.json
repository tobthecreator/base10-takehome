{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "../app/**/*.ts",
    "../app/**/*.tsx",
    "../app/**/*.js",
    "../app/**/*.jsx",
    "../../apps/app/.next/types/**/*.ts",
    "../../dist/apps/app/.next/types/**/*.ts",
    "../app/next-env.d.ts"
  ],
  "exclude": [
    "../app/node_modules",
    "../app/jest.config.ts",
    "../app/src/**/*.spec.ts",
    "../app/src/**/*.test.ts"
  ]
}
